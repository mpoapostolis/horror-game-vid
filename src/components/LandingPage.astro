<!-- Landing Page Overlay -->
<div
  id="landing-page"
  class="fixed inset-0 z-50 flex flex-col items-center justify-center bg-black/95 text-white transition-opacity duration-1000 select-none"
>
  <!-- Dynamic Background Effects -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_0%,#000_100%)] opacity-80"
    >
    </div>
    <div
      class="absolute top-0 left-0 w-full h-full bg-[url('/assets/noise.png')] opacity-[0.03] animate-pulse"
    >
    </div>
  </div>

  <!-- Content Container -->
  <div
    class="relative z-10 flex flex-col items-center gap-8 p-8 max-w-2xl text-center"
  >
    <!-- Title -->
    <h1
      class="text-7xl md:text-9xl font-black tracking-tighter text-transparent bg-clip-text bg-linear-to-b from-gray-100 to-gray-800 drop-shadow-2xl animate-scale-in"
    >
      VXL-BABY
    </h1>

    <!-- Subtitle -->
    <p
      class="text-xl md:text-2xl text-gray-400 font-light tracking-widest uppercase opacity-0 animate-fade-in-delayed"
    >
      A Web-Based Horror Experiment
    </p>

    <!-- Play Button -->
    <button
      id="play-btn"
      class="group relative mt-12 px-12 py-4 bg-transparent border border-gray-700 hover:border-white text-gray-300 hover:text-white transition-all duration-300 overflow-hidden"
    >
      <span
        class="relative z-10 font-bold tracking-[0.2em] text-sm md:text-base uppercase flex items-center gap-2"
      >
        Enter Experience
      </span>
      <div
        class="absolute inset-0 bg-white/5 transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left duration-300"
      >
      </div>
    </button>

    <!-- Footer/Credits -->
    <div
      class="absolute bottom-8 text-[10px] text-gray-600 tracking-widest uppercase"
    >
      Built with Babylon.js &bull; Astro &bull; Havok
    </div>
  </div>
</div>

<style>
  /* Custom Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-delayed {
    animation: fadeIn 1s ease-out 0.5s forwards;
  }
</style>

<script>
  const playBtn = document.getElementById("play-btn");
  const landingPage = document.getElementById("landing-page");

  if (playBtn && landingPage) {
    playBtn.addEventListener("click", () => {
      // Fade out
      landingPage.style.opacity = "0";
      landingPage.style.pointerEvents = "none";

      // Remove from DOM after transition
      setTimeout(() => {
        landingPage.remove();
      }, 1000);

      // Dispatch event for game start if needed (optional, or rely on just revealing canvas)
      window.dispatchEvent(new CustomEvent("game-start"));
    });
  }
</script>
