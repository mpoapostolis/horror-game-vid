---
import Header from "../common/Header.astro";
import Card from "../common/Card.astro";
import Footer from "../common/Footer.astro";
---

<!-- Global Background -->
<div
  class="fixed inset-0 z-0 bg-[#000000] text-white overflow-hidden pointer-events-none"
>
  <!-- Surgical Grid Background -->
  <div
    class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-size-[40px_40px] opacity-50"
  >
  </div>
  <div
    class="absolute inset-0 bg-[radial-gradient(circle_800px_at_100%_0%,rgba(120,119,198,0.2),transparent)]"
  >
  </div>

  <!-- Ambient Glows -->
  <div
    class="absolute top-[-20%] left-[-10%] w-[50%] h-[50%] bg-purple-900/25 blur-[120px] rounded-full animate-pulse-slow"
  >
  </div>
  <div
    class="absolute bottom-[-20%] right-[-10%] w-[50%] h-[50%] bg-cyan-900/20 blur-[120px] rounded-full animate-pulse-slow delay-1000"
  >
  </div>

  <!-- Noise Overlay -->
  <div class="absolute inset-0 opacity-[0.02] bg-[url('/assets/noise-2.png')]">
  </div>
</div>

<!-- Main Scroll Container -->
<main class="relative z-10 w-full overflow-x-hidden perspective-container">
  <Header />

  <!-- HERO SECTION -->
  <section
    class="relative min-h-screen flex flex-col justify-center items-center px-4 pt-20 overflow-hidden"
  >
    <div
      class="relative z-10 flex flex-col items-center max-w-5xl mx-auto text-center w-full"
    >
      <!-- Main Title (Glitch Effect) -->
      <h1
        class="text-7xl md:text-[150px] font-black tracking-tighter leading-[0.85] select-none relative z-10 mb-8 group"
      >
        <span class="block text-white relative z-10 drop-shadow-2xl"
          >VXLVERSE</span
        >
        <!-- Glitch Overlay -->
        <span
          class="absolute inset-0 text-emerald-500 opacity-100 animate-glitch-1 pointer-events-none mix-blend-screen"
          aria-hidden="true">VXLVERSE</span
        >

        <span
          class="absolute inset-0 text-purple-500 opacity-100 animate-glitch-2 pointer-events-none mix-blend-screen"
          aria-hidden="true">VXLVERSE</span
        >
      </h1>

      <!-- Clear Messaging -->
      <div
        class="max-w-2xl mx-auto mb-12 animate-fade-in"
        style="animation-delay: 0.2s; animation-fill-mode: forwards;"
      >
        <p
          class="text-xl md:text-3xl text-zinc-300 font-bold tracking-tight mb-2"
        >
          The easiest way to create a 3D story game.
        </p>
        <p class="text-zinc-500 font-mono text-sm max-w-lg mx-auto">
          No coding. No friction. Just create.
        </p>
      </div>

      <!-- CTA Buttons (Sharp & Technical) -->
      <div
        class="flex flex-col md:flex-row gap-6 w-full md:w-auto items-center justify-center animate-fade-in opacity-0"
        style="animation-delay: 0.4s; animation-fill-mode: forwards;"
      >
        <a
          href="/editor"
          class="group relative w-full md:w-auto min-w-[220px] h-[60px] bg-white text-black font-black uppercase tracking-widest text-sm flex items-center justify-center hover:scale-105 transition-transform duration-200 clip-path-slant shadow-[5px_5px_0px_0px_rgba(255,255,255,0.2)]"
        >
          <span class="relative z-10">Start Creating</span>
          <div
            class="absolute inset-0 bg-zinc-200 opacity-0 group-hover:opacity-100 transition-opacity"
          >
          </div>
        </a>

        <a
          href="/explore"
          class="w-full md:w-auto min-w-[220px] h-[60px] border-2 border-white/20 bg-black text-white font-bold uppercase tracking-widest text-sm flex items-center justify-center hover:bg-white hover:text-black hover:border-white transition-all duration-200"
        >
          <span>Play Games</span>
        </a>
      </div>
    </div>
  </section>

  <!-- EXPLORE / TRENDING GAMES -->
  <section
    id="explore"
    class="w-full px-4 md:px-12 py-32 bg-[#020202] border-t border-white/5 relative z-10"
  >
    <div class="max-w-7xl mx-auto">
      <div class="flex justify-between items-end mb-16 px-2">
        <div>
          <h2
            class="text-4xl md:text-5xl font-black uppercase tracking-tighter text-white mb-2"
          >
            Trending Games
          </h2>
          <p class="text-zinc-500 text-xs tracking-wider uppercase font-mono">
            Most popular worlds this week
          </p>
        </div>
        <a
          href="/explore"
          class="hidden md:block text-[10px] uppercase font-bold tracking-widest text-zinc-500 hover:text-white transition-colors border-b border-zinc-800 pb-1 hover:border-white"
        >
          View All Games ->
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Game Card 1 -->
        <div
          class="group relative aspect-[3/4] bg-black border border-white/10 hover:border-white/30 transition-all duration-300 overflow-hidden cursor-pointer"
        >
          <div
            class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1614726365723-49cfae92782f?q=80&w=800&auto=format&fit=crop')] bg-cover bg-center opacity-40 group-hover:opacity-60 transition-opacity duration-500 grayscale group-hover:grayscale-0"
          >
          </div>
          <div
            class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"
          >
          </div>
          <div class="absolute bottom-0 left-0 p-6 w-full">
            <div class="flex items-center gap-2 mb-3">
              <span
                class="px-1.5 py-0.5 border border-purple-500/30 text-purple-400 bg-purple-500/10 text-[8px] font-bold uppercase tracking-wider"
                >RPG</span
              >
              <span class="text-[9px] text-zinc-500 font-mono">ID: 8821</span>
            </div>
            <h3
              class="text-lg font-bold text-white leading-tight mb-1 group-hover:text-purple-300 transition-colors"
            >
              Neon Citadel
            </h3>
            <div class="h-px w-full bg-white/10 my-3"></div>
            <p class="text-[10px] text-zinc-500 uppercase tracking-wide">
              Branching Narrative • Cyberpunk
            </p>
          </div>
        </div>

        <!-- Game Card 2 -->
        <div
          class="group relative aspect-[3/4] bg-black border border-white/10 hover:border-white/30 transition-all duration-300 overflow-hidden cursor-pointer"
        >
          <div
            class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1518709268805-4e9042af9f23?q=80&w=800&auto=format&fit=crop')] bg-cover bg-center opacity-40 group-hover:opacity-60 transition-opacity duration-500 grayscale group-hover:grayscale-0"
          >
          </div>
          <div
            class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"
          >
          </div>
          <div class="absolute bottom-0 left-0 p-6 w-full">
            <div class="flex items-center gap-2 mb-3">
              <span
                class="px-1.5 py-0.5 border border-cyan-500/30 text-cyan-400 bg-cyan-500/10 text-[8px] font-bold uppercase tracking-wider"
                >Physics</span
              >
              <span class="text-[9px] text-zinc-500 font-mono">ID: 4102</span>
            </div>
            <h3
              class="text-lg font-bold text-white leading-tight mb-1 group-hover:text-cyan-300 transition-colors"
            >
              The Void Walker
            </h3>
            <div class="h-px w-full bg-white/10 my-3"></div>
            <p class="text-[10px] text-zinc-500 uppercase tracking-wide">
              Puzzle • Platformer
            </p>
          </div>
        </div>

        <!-- Game Card 3 -->
        <div
          class="group relative aspect-[3/4] bg-black border border-white/10 hover:border-white/30 transition-all duration-300 overflow-hidden cursor-pointer"
        >
          <div
            class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1511512578047-dfb367046420?q=80&w=800&auto=format&fit=crop')] bg-cover bg-center opacity-40 group-hover:opacity-60 transition-opacity duration-500 grayscale group-hover:grayscale-0"
          >
          </div>
          <div
            class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"
          >
          </div>
          <div class="absolute bottom-0 left-0 p-6 w-full">
            <div class="flex items-center gap-2 mb-3">
              <span
                class="px-1.5 py-0.5 border border-emerald-500/30 text-emerald-400 bg-emerald-500/10 text-[8px] font-bold uppercase tracking-wider"
                >Survival</span
              >
              <span class="text-[9px] text-zinc-500 font-mono">ID: 9931</span>
            </div>
            <h3
              class="text-lg font-bold text-white leading-tight mb-1 group-hover:text-emerald-300 transition-colors"
            >
              Echoes
            </h3>
            <div class="h-px w-full bg-white/10 my-3"></div>
            <p class="text-[10px] text-zinc-500 uppercase tracking-wide">
              Multiplayer • Procedural
            </p>
          </div>
        </div>

        <!-- Game Card 4 (New) -->
        <div
          class="group relative aspect-[3/4] bg-black border border-white/10 border-dashed flex flex-col items-center justify-center hover:bg-white/5 transition-colors cursor-pointer"
        >
          <div
            class="w-16 h-16 rounded-full border border-white/10 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6 text-zinc-500 group-hover:text-white transition-colors"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 4.5v15m7.5-7.5h-15"></path>
            </svg>
          </div>
          <span
            class="text-[10px] font-bold uppercase tracking-widest text-zinc-400 group-hover:text-white transition-colors"
            >Deploy New Node</span
          >
        </div>
      </div>
    </div>
  </section>

  <!-- FEATURES BENTO GRID -->
  <section
    id="features"
    class="min-h-screen w-full px-4 md:px-12 py-32 bg-[#050505] relative z-10 border-t border-white/5"
  >
    <div class="max-w-7xl mx-auto">
      <div
        class="mb-24 flex flex-col md:flex-row md:items-end justify-between gap-6 border-l border-purple-500/50 pl-8 ml-2"
      >
        <div class="max-w-xl">
          <h2
            class="text-4xl md:text-6xl font-black uppercase tracking-tighter text-white mb-4"
          >
            Core Architecture
          </h2>
          <p
            class="text-zinc-500 max-w-lg text-sm tracking-wide uppercase font-mono"
          >
            /SYSTEM_32: Advanced tooling deployed directly to browser.
          </p>
        </div>
      </div>

      <div
        class="grid grid-cols-1 md:grid-cols-3 md:grid-rows-2 gap-4 h-auto md:h-[700px]"
      >
        <!-- Large Card: Visual Scripting -->
        <Card
          title="Visual Logic"
          badge="No-Code"
          badgeColor="purple"
          class="md:col-span-2 md:row-span-2 bg-black"
        >
          <div
            slot="header"
            class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(168,85,247,0.05),transparent_40%)]"
          >
          </div>
          <div
            slot="header"
            class="absolute right-[-10%] top-[-10%] w-[70%] h-[70%] border border-white/5 bg-[#080808] opacity-50 group-hover:opacity-80 transition-opacity duration-500 rounded-lg transform rotate-[-5deg] group-hover:rotate-0 group-hover:scale-105 transition-all ease-out pointer-events-none"
          >
          </div>
          <p class="text-zinc-400 text-base leading-relaxed mt-4 max-w-lg">
            Create complex stories and game mechanics just by connecting nodes.
            No coding required.
          </p>
        </Card>

        <!-- Small Card: Havok -->
        <Card title="Physics" badge="Included" badgeColor="cyan">
          <div
            slot="header"
            class="absolute top-0 right-0 p-24 bg-cyan-500/5 blur-[80px] rounded-full pointer-events-none"
          >
          </div>
          <p
            class="text-xs text-zinc-500 uppercase tracking-widest w-full border-t border-white/5 pt-2 mt-4"
          >
            Real-time Fun
          </p>
        </Card>

        <!-- Small Card: World Building -->
        <Card title="Drag & Drop" badge="Easy_Build" badgeColor="emerald">
          <div
            slot="header"
            class="absolute bottom-0 left-0 p-24 bg-emerald-500/5 blur-[80px] rounded-full pointer-events-none"
          >
          </div>
          <p
            class="text-xs text-zinc-500 uppercase tracking-widest w-full border-t border-white/5 pt-2 mt-4"
          >
            Build your world in seconds.
          </p>
        </Card>
      </div>
    </div>
  </section>

  <!-- SHOWCASE / FOOTER -->
  <Footer />
</main>

<script lang="ts">
  // Mouse Spotlight Effect
  const featuresSection = document.getElementById("features");
  if (featuresSection) {
    featuresSection.addEventListener("mousemove", (e) => {
      const { left, top } = featuresSection.getBoundingClientRect();
      const x = e.clientX - left;
      const y = e.clientY - top;
      featuresSection.style.setProperty("--mouse-x", `${x}px`);
      featuresSection.style.setProperty("--mouse-y", `${y}px`);
    });
  }

  // 3D Tilt Effect on Cards
  const cards = document.querySelectorAll(".tilt-card");
  cards.forEach((card) => {
    card.addEventListener("mousemove", (e) => {
      // @ts-ignore
      const rect = card.getBoundingClientRect();
      const x = (e as MouseEvent).clientX - rect.left;
      const y = (e as MouseEvent).clientY - rect.top;

      const centerX = rect.width / 2;
      const centerY = rect.height / 2;

      const rotateX = ((y - centerY) / centerY) * -5; // Max 5deg rotation
      const rotateY = ((x - centerX) / centerX) * 5;

      // @ts-ignore
      card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.02, 1.02, 1.02)`;
    });

    card.addEventListener("mouseleave", () => {
      // @ts-ignore
      card.style.transform =
        "perspective(1000px) rotateX(0) rotateY(0) scale3d(1, 1, 1)";
    });
  });
</script>

<style>
  /* Base & Utility */
  .perspective-container {
    perspective: 1000px;
  }

  /* Spotlight Gradient */
  #features {
    --mouse-x: 50%;
    --mouse-y: 50%;
  }

  #features::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(
      800px circle at var(--mouse-x) var(--mouse-y),
      rgba(255, 255, 255, 0.06),
      transparent 40%
    );
    pointer-events: none;
    z-index: 1;
  }

  .tilt-card {
    transition: transform 0.1s ease-out;
    will-change: transform;
  }

  /* Animations */
  @keyframes slowPulse {
    0%,
    100% {
      opacity: 0.5;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.1);
    }
  }
  .animate-pulse-slow {
    animation: slowPulse 8s infinite ease-in-out;
  }

  @keyframes slideUp {
    from {
      transform: translateY(100px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
  .animate-slide-up {
    animation: slideUp 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 1s ease-out forwards;
  }

  @keyframes textShimmer {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 200% 50%;
    }
  }
  .animate-text-shimmer {
    background-size: 200% auto;
    animation: textShimmer 3s linear infinite;
  }

  /* Ultimate Luxe Glitch & Scan Animations */
  @keyframes scan {
    0% {
      background-position: 0% 100%;
    }
    100% {
      background-position: 0% 0%;
    }
  }
  .animate-scan {
    animation: scan 4s linear infinite;
  }

  @keyframes glitch-1 {
    0% {
      clip-path: inset(20% 0 80% 0);
      transform: translate(-2px, 1px);
    }
    20% {
      clip-path: inset(60% 0 10% 0);
      transform: translate(2px, -1px);
    }
    40% {
      clip-path: inset(40% 0 50% 0);
      transform: translate(-2px, 2px);
    }
    60% {
      clip-path: inset(80% 0 5% 0);
      transform: translate(2px, -2px);
    }
    80% {
      clip-path: inset(10% 0 70% 0);
      transform: translate(-1px, 1px);
    }
    100% {
      clip-path: inset(30% 0 50% 0);
      transform: translate(1px, -1px);
    }
  }
  .animate-glitch-1 {
    animation: glitch-1 1.5s infinite linear alternate-reverse;
  }

  @keyframes glitch-2 {
    0% {
      clip-path: inset(10% 0 60% 0);
      transform: translate(3px, -1px);
    }
    20% {
      clip-path: inset(80% 0 5% 0);
      transform: translate(-3px, 3px);
    }
    40% {
      clip-path: inset(30% 0 20% 0);
      transform: translate(3px, 1px);
    }
    60% {
      clip-path: inset(10% 0 80% 0);
      transform: translate(-3px, -3px);
    }
    80% {
      clip-path: inset(50% 0 30% 0);
      transform: translate(3px, 1px);
    }
    100% {
      clip-path: inset(70% 0 10% 0);
      transform: translate(-1px, 3px);
    }
  }
  .animate-glitch-2 {
    animation: glitch-2 2s infinite linear alternate-reverse;
  }

  .clip-path-slant {
    clip-path: polygon(15% 0, 100% 0, 100% 100%, 0 100%);
  }

  /* Text Perspective 3D */
  .perspective-text {
    perspective: 500px;
  }
  .delay-150 {
    animation-delay: 150ms;
  }
  .delay-200 {
    animation-delay: 200ms;
  }
  .delay-300 {
    animation-delay: 300ms;
  }
  .delay-1000 {
    animation-delay: 1000ms;
  }
</style>
