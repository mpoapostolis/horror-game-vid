---
import Layout from "../layouts/Layout.astro";
import Header from "../components/common/Header.astro";
import "../styles/global.css";
---

<Layout title="Pricing | VXLVERSE">
  <Header />

  <div
    class="min-h-screen bg-[#020202] text-white pt-32 px-4 relative overflow-hidden flex flex-col items-center"
  >
    <!-- Background Effects -->
    <div class="fixed inset-0 pointer-events-none">
      <div
        class="absolute top-[20%] left-[50%] -translate-x-1/2 w-[800px] h-[800px] bg-purple-900/10 blur-[150px] rounded-full"
      >
      </div>
      <div
        class="absolute inset-0 opacity-[0.03] bg-[url('/assets/noise.png')]"
      >
      </div>
    </div>

    <div class="relative z-10 max-w-6xl mx-auto w-full">
      <div class="text-center mb-20">
        <h1
          class="text-5xl md:text-7xl font-black uppercase tracking-tighter mb-6"
        >
          Choose Your <span
            class="text-transparent bg-clip-text bg-linear-to-r from-purple-500 to-cyan-500"
            >Power</span>
        </h1>
        <p class="text-gray-400 text-lg max-w-2xl mx-auto">
          Start for free. Scale to infinity. No platform fees on your first $10k
          revenue.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
        <!-- TIER 1: SPARK -->
        <div
          class="p-8 border border-white/10 rounded-2xl bg-white/[0.02] backdrop-blur-md hover:border-white/20 transition-all group"
        >
          <div class="mb-6">
            <span
              class="text-xs font-bold uppercase tracking-widest text-gray-500"
              >Hobbyist</span
            >
            <h2 class="text-3xl font-black text-white mt-2">Spark</h2>
            <div class="mt-4 flex items-baseline">
              <span class="text-4xl font-bold">$0</span>
              <span class="text-gray-500 ml-2">/ month</span>
            </div>
          </div>
          <a
            href="/editor"
            class="block w-full py-4 border border-white/20 rounded-lg text-center font-bold uppercase tracking-widest text-xs hover:bg-white hover:text-black transition-all mb-8"
            >Start Creating</a
          >
          <ul class="space-y-4 text-sm text-gray-400">
            <li class="flex items-center gap-3">
              <span class="text-white">✓</span> Unlimited Play
            </li>
            <li class="flex items-center gap-3">
              <span class="text-white">✓</span> 1 Published World
            </li>
            <li class="flex items-center gap-3">
              <span class="text-white">✓</span> Basic Assets Library
            </li>
            <li class="flex items-center gap-3">
              <span class="text-white">✓</span> Community Support
            </li>
          </ul>
        </div>

        <!-- TIER 2: FLAME (Featured) -->
        <div
          class="p-8 border border-purple-500 rounded-2xl bg-purple-900/[0.05] backdrop-blur-md relative transform md:-translate-y-4 shadow-[0_0_50px_rgba(168,85,247,0.1)]"
        >
          <div
            class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 px-4 py-1 bg-purple-600 rounded-full text-[10px] font-bold uppercase tracking-widest text-white shadow-lg"
          >
            Most Popular
          </div>
          <div class="mb-6">
            <span
              class="text-xs font-bold uppercase tracking-widest text-purple-400"
              >Creator</span
            >
            <h2 class="text-3xl font-black text-white mt-2">Flame</h2>
            <div class="mt-4 flex items-baseline">
              <span class="text-4xl font-bold">$12</span>
              <span class="text-gray-500 ml-2">/ month</span>
            </div>
          </div>
          <a
            href="#"
            class="block w-full py-4 bg-purple-600 rounded-lg text-center font-bold uppercase tracking-widest text-xs text-white hover:bg-purple-500 transition-all mb-8 shadow-lg shadow-purple-900/50"
            >Get Pro</a
          >
          <ul class="space-y-4 text-sm text-gray-300">
            <li class="flex items-center gap-3">
              <span class="text-purple-400">✓</span> Unlimited Published Worlds
            </li>
            <li class="flex items-center gap-3">
              <span class="text-purple-400">✓</span> Upload Custom Models (GLB)
            </li>
            <li class="flex items-center gap-3">
              <span class="text-purple-400">✓</span> Script Editor Pro (Autocomplete)
            </li>
            <li class="flex items-center gap-3">
              <span class="text-purple-400">✓</span> Remove "Made with VXL" Splash
            </li>
            <li class="flex items-center gap-3">
              <span class="text-purple-400">✓</span> Priority Indexing in Explore
            </li>
          </ul>
        </div>

        <!-- TIER 3: INFERNO -->
        <div
          class="p-8 border border-white/10 rounded-2xl bg-white/[0.02] backdrop-blur-md hover:border-cyan-500/50 transition-all group"
        >
          <div class="mb-6">
            <span
              class="text-xs font-bold uppercase tracking-widest text-cyan-500"
              >Studio</span
            >
            <h2 class="text-3xl font-black text-white mt-2">Inferno</h2>
            <div class="mt-4 flex items-baseline">
              <span class="text-4xl font-bold">$49</span>
              <span class="text-gray-500 ml-2">/ month</span>
            </div>
          </div>
          <a
            href="#"
            class="block w-full py-4 border border-white/20 rounded-lg text-center font-bold uppercase tracking-widest text-xs hover:bg-cyan-500 hover:border-cyan-500 hover:text-white transition-all mb-8"
            >Contact Sales</a
          >
          <ul class="space-y-4 text-sm text-gray-400">
            <li class="flex items-center gap-3">
              <span class="text-white">✓</span> Everything in Flame
            </li>
            <li class="flex items-center gap-3">
              <span class="text-cyan-500">✓</span> Team Collaboration (5 seats)
            </li>
            <li class="flex items-center gap-3">
              <span class="text-cyan-500">✓</span> Dedicated Game Servers
            </li>
            <li class="flex items-center gap-3">
              <span class="text-cyan-500">✓</span> Monetization (In-App Purchases)
            </li>
            <li class="flex items-center gap-3">
              <span class="text-cyan-500">✓</span> 24/7 Dedicated Support
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</Layout>
