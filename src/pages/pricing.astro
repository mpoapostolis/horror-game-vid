---
import Layout from "../layouts/Layout.astro";
import Header from "../components/common/Header.astro";
import "../styles/global.css";
---

<Layout title="Pricing | VXLVERSE">
  <Header />

  <div
    class="min-h-screen bg-[#000000] text-white pt-32 px-4 relative overflow-hidden flex flex-col items-center"
  >
    <!-- Background Effects (Luxe) -->
    <div class="fixed inset-0 pointer-events-none z-0">
      <div
        class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-size-[40px_40px] opacity-20"
      >
      </div>
      <div
        class="absolute top-[20%] left-[50%] -translate-x-1/2 w-[800px] h-[800px] bg-purple-900/10 blur-[150px] rounded-full"
      >
      </div>
      <div
        class="absolute inset-0 opacity-[0.02] bg-[url('/assets/noise.png')]"
      >
      </div>
    </div>

    <div class="relative z-10 max-w-6xl mx-auto w-full">
      <div class="text-center mb-20">
        <div
          class="inline-flex items-center gap-2 mb-4 px-3 py-1 border border-white/10 rounded-full bg-black/40 backdrop-blur-md"
        >
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-500 animate-pulse"
          ></span>
          <span
            class="text-[9px] uppercase tracking-widest text-zinc-400 font-mono"
            >Fair Pricing</span
          >
        </div>
        <h1
          class="text-5xl md:text-7xl font-black uppercase tracking-tighter mb-6 text-white"
        >
          Simple <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-cyan-500"
            >Plans</span
          >
        </h1>
        <p class="text-zinc-400 text-lg max-w-2xl mx-auto font-light">
          Start building for free. <span class="text-white"
            >Revenue share only after $10k.</span
          > Transparent costs.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-start">
        <!-- TIER 1: SPARK -->
        <div
          class="group p-8 border border-white/10 bg-black hover:border-white/30 transition-all duration-300 relative overflow-hidden"
        >
          <div
            class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(255,255,255,0.03),transparent_60%)]"
          >
          </div>

          <div class="relative z-10">
            <div class="mb-8">
              <span
                class="text-[10px] font-bold uppercase tracking-widest text-zinc-500 font-mono"
                >Hobbyist</span
              >
              <h2 class="text-2xl font-black text-white mt-2 tracking-tight">
                Spark
              </h2>
              <div class="mt-4 flex items-baseline">
                <span class="text-4xl font-bold tracking-tighter">$0</span>
                <span
                  class="text-zinc-600 text-sm ml-2 uppercase tracking-wider"
                  >/ mo</span
                >
              </div>
            </div>
            <a
              href="/editor"
              class="block w-full py-4 border border-white/20 bg-white/5 text-center font-bold uppercase tracking-widest text-[10px] hover:bg-white hover:text-black transition-all mb-8 group-hover:scale-[1.02]"
              >Start Free</a
            >
            <ul
              class="space-y-4 text-xs font-mono text-zinc-400 uppercase tracking-wide"
            >
              <li class="flex items-center gap-3">
                <span class="text-white">✓</span> Unlimited Play
              </li>
              <li class="flex items-center gap-3">
                <span class="text-white">✓</span> 1 Published World
              </li>
              <li class="flex items-center gap-3">
                <span class="text-white">✓</span> Basic Assets
              </li>
              <li class="flex items-center gap-3">
                <span class="text-white">✓</span> Community Support
              </li>
            </ul>
          </div>
        </div>

        <!-- TIER 2: FLAME (Featured) -->
        <div
          class="group p-8 border border-purple-500/50 bg-black relative transform md:-translate-y-4 hover:border-purple-400 transition-all duration-300 shadow-[0_0_80px_rgba(168,85,247,0.1)]"
        >
          <div
            class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(168,85,247,0.1),transparent_60%)]"
          >
          </div>

          <div
            class="absolute top-0 right-0 px-4 py-2 bg-purple-600 font-bold uppercase tracking-widest text-[9px] text-white"
          >
            Recommended
          </div>

          <div class="relative z-10">
            <div class="mb-8">
              <span
                class="text-[10px] font-bold uppercase tracking-widest text-purple-400 font-mono"
                >Creator</span
              >
              <h2 class="text-2xl font-black text-white mt-2 tracking-tight">
                Flame
              </h2>
              <div class="mt-4 flex items-baseline">
                <span class="text-4xl font-bold tracking-tighter">$12</span>
                <span
                  class="text-zinc-600 text-sm ml-2 uppercase tracking-wider"
                  >/ mo</span
                >
              </div>
            </div>
            <a
              href="#"
              class="block w-full py-4 bg-purple-600 text-center font-bold uppercase tracking-widest text-[10px] text-white hover:bg-purple-500 transition-all mb-8 shadow-lg shadow-purple-900/40 hover:scale-[1.02]"
              >Upgrade</a
            >
            <ul
              class="space-y-4 text-xs font-mono text-zinc-300 uppercase tracking-wide"
            >
              <li class="flex items-center gap-3 text-white">
                <span class="text-purple-400">✓</span> Unlimited Worlds
              </li>
              <li class="flex items-center gap-3">
                <span class="text-purple-400">✓</span> Import GLB Models
              </li>
              <li class="flex items-center gap-3">
                <span class="text-purple-400">✓</span> Script Editor Pro
              </li>
              <li class="flex items-center gap-3">
                <span class="text-purple-400">✓</span> Remove Branding
              </li>
              <li class="flex items-center gap-3">
                <span class="text-purple-400">✓</span> Priority Indexing
              </li>
            </ul>
          </div>
        </div>

        <!-- TIER 3: INFERNO -->
        <div
          class="group p-8 border border-white/10 bg-black hover:border-cyan-500/50 transition-all duration-300 relative overflow-hidden"
        >
          <div
            class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(6,182,212,0.05),transparent_60%)]"
          >
          </div>

          <div class="relative z-10">
            <div class="mb-8">
              <span
                class="text-[10px] font-bold uppercase tracking-widest text-cyan-500 font-mono"
                >Studio</span
              >
              <h2 class="text-2xl font-black text-white mt-2 tracking-tight">
                Inferno
              </h2>
              <div class="mt-4 flex items-baseline">
                <span class="text-4xl font-bold tracking-tighter">$49</span>
                <span
                  class="text-zinc-600 text-sm ml-2 uppercase tracking-wider"
                  >/ mo</span
                >
              </div>
            </div>
            <a
              href="#"
              class="block w-full py-4 border border-white/20 bg-white/5 text-center font-bold uppercase tracking-widest text-[10px] hover:bg-cyan-900/20 hover:border-cyan-500/50 hover:text-cyan-400 transition-all mb-8 group-hover:scale-[1.02]"
              >Contact Sales</a
            >
            <ul
              class="space-y-4 text-xs font-mono text-zinc-400 uppercase tracking-wide"
            >
              <li class="flex items-center gap-3">
                <span class="text-white">✓</span> Everything in Flame
              </li>
              <li class="flex items-center gap-3">
                <span class="text-cyan-500">✓</span> Team (5 Seats)
              </li>
              <li class="flex items-center gap-3">
                <span class="text-cyan-500">✓</span> Dedicated Servers
              </li>
              <li class="flex items-center gap-3">
                <span class="text-cyan-500">✓</span> In-App Purchases
              </li>
              <li class="flex items-center gap-3">
                <span class="text-cyan-500">✓</span> 24/7 Support
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
