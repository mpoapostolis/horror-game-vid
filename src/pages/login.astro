---
import Layout from "../layouts/Layout.astro";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import "../styles/global.css";
---

<Layout title="Login | VXLVERSE">
  <Header />

  <div
    class="relative flex min-h-screen flex-col items-center justify-center overflow-hidden bg-[var(--bg-app)] text-white pt-24 pb-12"
  >
    <!-- Background Effects -->
    <div class="fixed inset-0 z-0 pointer-events-none">
      <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-emerald-500/5 rounded-full blur-[120px] animate-pulse"
      >
      </div>
      <div
        class="absolute inset-0 bg-[url('/assets/grid.svg')] opacity-5 bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"
      >
      </div>
      <!-- Noise Overlay -->
      <div
        class="absolute inset-0 opacity-[0.03] bg-[url('/assets/noise.png')]"
      >
      </div>
    </div>

    <!-- Login Container -->
    <main
      class="relative z-10 w-full max-w-md px-4 flex-grow flex flex-col justify-center"
    >
      <div
        class="bg-[#050505]/80 backdrop-blur-xl border border-white/10 rounded-3xl p-8 md:p-12 shadow-2xl relative overflow-hidden group"
      >
        <!-- Glow Border Effect -->
        <div
          class="absolute inset-0 bg-gradient-to-br from-white/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"
        >
        </div>

        <!-- Logo & Header -->
        <div class="flex flex-col items-center gap-6 mb-12">
          <div
            class="relative w-12 h-12 flex items-center justify-center bg-white/5 rounded-full border border-white/10"
          >
            <div
              class="absolute inset-0 bg-emerald-500 rounded-full animate-ping opacity-20"
            >
            </div>
            <div
              class="w-3 h-3 bg-emerald-500 rounded-full shadow-[0_0_15px_rgba(16,185,129,0.5)]"
            >
            </div>
          </div>

          <div class="text-center space-y-2">
            <h1
              class="text-3xl font-black tracking-tighter uppercase text-white"
            >
              Welcome Back
            </h1>
            <p class="text-zinc-500 text-sm font-mono tracking-wide">
              /USER_AUTH/INITIALIZE
            </p>
          </div>
        </div>

        <!-- Auth Buttons -->
        <div class="space-y-4">
          <button
            id="google-login-btn"
            class="group relative w-full h-14 bg-white hover:bg-zinc-200 text-black font-bold uppercase tracking-widest text-xs rounded-xl overflow-hidden transition-all duration-300 transform hover:scale-[1.02] flex items-center justify-center gap-3 active:scale-[0.98]"
          >
            <span class="relative z-10">Continue with Google</span>
            <svg
              class="w-5 h-5 relative z-10"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                fill="#4285F4"></path>
              <path
                d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                fill="#34A853"></path>
              <path
                d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                fill="#FBBC05"></path>
              <path
                d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                fill="#EA4335"></path>
            </svg>
          </button>
        </div>

        <!-- Status / Error -->
        <div
          id="error-msg"
          class="mt-6 p-3 bg-red-500/10 border border-red-500/20 rounded-lg text-red-400 text-[10px] font-mono text-center hidden"
        >
        </div>

        <div class="mt-8 pt-8 border-t border-white/5 text-center">
          <p class="text-[10px] text-zinc-600 uppercase tracking-widest">
            System v1.0.4 Online
          </p>
        </div>
      </div>
    </main>

    <div class="w-full mt-auto">
      <Footer />
    </div>
  </div>
</Layout>

<script>
  import { pb } from "../lib/pb";

  const btn = document.getElementById("google-login-btn");
  const errorMsg = document.getElementById("error-msg");

  btn?.addEventListener("click", async () => {
    try {
      if (errorMsg) errorMsg.classList.add("hidden");

      const authData = await pb
        .collection("users")
        .authWithOAuth2({ provider: "google" });

      if (pb.authStore.isValid && authData) {
        document.cookie = pb.authStore.exportToCookie({ httpOnly: false });
        // Hard redirect to ensure state refresh
        window.location.href = "/editor";
      }
    } catch (err: any) {
      console.error("Login failed:", err);
      if (errorMsg) {
        errorMsg.textContent =
          "AUTH_ERROR: " + (err.message || "Connection refused");
        errorMsg.classList.remove("hidden");
      }
    }
  });
</script>
